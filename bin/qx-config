#!/usr/bin/env python3
"""Simple helper to dump current qx.config values for debugging/CI.

Usage: bin/qx-config --show
"""
import argparse
import json
from qx import config


def main():
    ap = argparse.ArgumentParser(description="Show qx config")
    ap.add_argument("--show", action="store_true", help="Print current config as JSON")
    args = ap.parse_args()

    if args.show:
        out = {
            "max_qubits": config.get_max_qubits(),
            "default_shots": config.get_default_shots(),
            "runs_dir": config.get_runs_dir(),
            "logging_level": config.get_logging_level(),
        }
        print(json.dumps(out, indent=2))
        print("CONFIG_SMOKE_OK")
        return 0

    ap.print_help()
    return 2


if __name__ == '__main__':
    raise SystemExit(main())
